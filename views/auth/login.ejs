<form action="/auth/login" method="POST">
  <h3 class="welcome-login-message">Welcome</h3>
  <p class="welcome-login-sign-in">Please Sign In</p>
  <div class="form-row">
    <div class="form-item">
      <label for="auth-email">Email Address: </label>
      <input type="email" class="form-control" id="auth-email" name="email" aria-describedby="emailHelp">
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="auth-password">Password: </label>
      <input type="password" class="form-control" id="auth-password" name="password">
    </div>
  </div>
  <div class="btn-row">
    <button type="submit" id="login-button" class="btn btn-primary">Log In</button>
  </div>
</form>

