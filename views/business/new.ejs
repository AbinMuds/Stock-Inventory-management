<div class="business">
  <form action="/business/new" method="POST" class="bform">
    <h3 class="welcome-login-message">Welcome</h3>
    <p class="welcome-login-sign-in">Start a Business</p>
    <div class="form-group">
      <label for="name"></label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Business Name: ">
    </div>
    <div>
      <label>Choose</label>
      <input type="file" name="businessimg" class="filepond">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" rows="3" name="description" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
      <label for="type"></label>
      <input type="text" class="form-control" id="type" name="type" placeholder="Type">
    </div>
    <a href="/business">Cancel</a>
    <button type="submit" id="login-button" class="btn btn-primary">Create</button>
  </form>
</div>